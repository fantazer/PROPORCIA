include block_html/_style.pug
include block_html/_include.pug

.pattern-black
	+header()
	//banner
	.main-cont.main-cont--mobile
		.banner
			.banner-img-wrap
				.banner-img(style="background-image:url('img/main-banner.jpg')")
			.banner-state__col

				a(href="#").banner-state
					.flag
						.flag-content
							+icon("box","icon")
					.banner-state__title Бесплатная <br> Доставка
					.banner-state__text При заказе от 500 руб. только по Тюмени
				a(href="#").banner-state
					.flag
						.flag-content
							+icon("bonus","icon")
					.banner-state__title Бесплатная <br> Доставка
					.banner-state__text При заказе от 500 руб. только по Тюмени

//
.section-content
	.main-cont.main-cont--mobile
		.title--section Популярное на этой неделе
		.item-wrap
			- for (var i=0;i<6;i++)
				+item()
			.item-el-slider
				.item-el-slider-wrap
					.item-el-slider__el(style="background-image:url('img/item-2.jpg')")
						.filter
						.item-slider__cont
							.item-slider__title Суши
							.item-slider__info
								.item-slider__info-el
									.item-slider__info-el-val 03
									.item-slider__info-el-txt Акции
								.item-slider__info-el
									.item-slider__info-el-val 12
									.item-slider__info-el-txt Новинок
								.item-slider__info-el
									.item-slider__info-el-val 24
									.item-slider__info-el-txt Позиций
							.item-slider__nav
								.item-slider__nav-el.item-slider__nav-el--left
									+icon("arrow-dirrect-left","icon")
								.item-slider__nav-el.item-slider__nav-el--right
									+icon("arrow-dirrect-right","icon")

					.item-el-slider__el(style="background-image:url('img/item-1.jpg')")
						.filter
						.item-slider__cont
							.item-slider__title Роллы
							.item-slider__info
								.item-slider__info-el
									.item-slider__info-el-val 04
									.item-slider__info-el-txt Акции
								.item-slider__info-el
									.item-slider__info-el-val 11
									.item-slider__info-el-txt Новинок
								.item-slider__info-el
									.item-slider__info-el-val 81
									.item-slider__info-el-txt Позиций
							.item-slider__nav
								.item-slider__nav-el.item-slider__nav-el--left
									+icon("arrow-dirrect-left","icon")
								.item-slider__nav-el.item-slider__nav-el--right
									+icon("arrow-dirrect-right","icon")

//section-sale
.section-sale
	.main-cont.main-cont--mobile
		.section-sale__wrap
			.section-sale__info
				.section-sale__info-title Акции
				.section-sale__info-text большие скидки этого месяца
				a(href="#").section-sale__info-get Все акции
			- for (var i=0;i<3;i++)
				+item()
		.section-sale-get--mobile
			a(href="#") Все акции

//section-news
.section-content.section-content--news
	.main-cont.main-cont--mobile
		.title--section Новости и события
		.news-list.news-list--slider
			- for (var i=0;i<2;i++)
				.news-el
					.news-el__img-wrap
						a(href="#" style="background-image:url('img/news.jpg')").news-el__img
					.news-el__wrapper
						a(href="#").news-el__title С 8 Марта! дорогие женщины
						.news-el__text С 8 марта "Пропорция" приготовил для вас новое меню!) Если вы хотите сделать предзаказ на 8 марта сегодня
						.news-el__date 05 Марта, 2017
			.news-el
				.news-el__img-wrap
					a(href="#" style="background-image:url('img/news.jpg')").news-el__img
				.news-el__wrapper
					a(href="#").news-el__title С 8 Марта! дорогие женщины
					.news-el__text С 8 марта "Пропорция" приготовил для вас новое меню!) Если вы хотите сделать предзаказ на 8 марта сегодня С 8 марта "Пропорция" приготовил для вас новое меню!) Если вы хотите сделать предзаказ на 8 марта сегодня
					.news-el__date 05 Марта, 2017

